{% extends 'admin/base.html.twig' %}

{% block title %} Manage Bookings !{% endblock %}

{% block body %}
     <div class="container-fluid">
        <h1 class="my-5">Manage of Bookings </h1>

        <table class="table table-hover">
           <thead>
            <tr>
             <th>Id</th>
             <th>Date</th>
             <th>Visitor</th>
             <th>Ad</th>
             <th>Duration</th>
             <th>Amount</th>
             <th>Actions</th>
            </tr>
           </thead>
           <tbody>

            {% for booking in pagination.data %}
              <tr>
                 <td>{{ booking.id }}</td>
                 <td>{{ booking.createdAt | date('d/m/Y H:i') }}</td>
                 <td><img src="{{ booking.booker.picture }}" alt="" class="avatar avatar-micro">
                     {{ booking.booker.fullName }}
                 </td>
                 <td>{{ booking.ad.title }}</td>
                 <td>{{ booking.duration }}</td>
                 <td>{{ booking.amount | number_format(2, "," , " ") }}&euro;</td>
                 <td>
                   <a href="{{ path('admin_booking_edit', {'id': booking.id })}}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                   <a href="{{ path('admin_booking_delete', {'id': booking.id })}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                 </td>
               
              </tr>
            {% endfor %}
           </tbody>
        </table>

        {{ pagination.display() }}

     </div>
{% endblock %}
