{% extends 'admin/base.html.twig' %}

{% block title %}Manage Ads !{% endblock %}

{% block body %}
    <div class="container-fluid">
    
        <h1 class="my-5">MANAGE OF ADS</h1>
        <table class="table table-hover">
            <thead>
              <tr>
                 <th>ID</th>
                 <th>Title</th>
                 <th>Author</th>
                 <th class="text-center">Booking</th>
                 <th class="text-center">Rate</th>
                 <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for ad in ads %}
               <tr>
                  <td>{{ ad.id }}</td>
                  <td>{{ ad.title }}</td>
                  <td>
                      <img src="{{ ad.author.picture }}" alt="avatar of {{ ad.author.fullName }} " class="avatar avatar-micro mr-2">
                      {{ ad.author.fullName }}
                  </td>
                   <td class="text-center"> 
                     <span class="badge badge-primary rounded">{{ ad.bookings | length }}</span>
                   </td>
                  <td class="text-center">
                     <span class="badge badge-primary rounded"> {{ ad.avgRatings | number_format(1, ',', ' ') }}</span>
                  </td>
                  <td>
                     <a href="{{ path('admin_ads_edit' , {'id' : ad.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                     <a href="{{ path('admin_ads_delete', {'id' : ad.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                  </td>
               </tr>
              {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
