{% extends 'base.html.twig' %}

{% block title %}Page of {{ user.fullName }} !{% endblock %}

{% block body %}
    <div class="container">
       <div class="row align-items-center mb-5">
          <div class="col-3 text-center">
              <img src="{{ user.picture }}" class="avatar mb-3" alt="Avatar de {{ user.fullName }}">
              <br>
              <span class="badge badge-primary">{{ user.ads | length }} ads</span>
          </div>
          <div class="col-9">
              <h1>{{ user.fullName }}</h1>
              {% if user is same as (app.user) %}

              <div class="mt-3">
                 <a href="{{ path('account_profile')}}" class="btn btn-primary mr-2 mb-2 ">Change My Information</a>
                 <a href="{{ path('account_password')}}" class="btn btn-primary mr-2 mb-2 ">Change your password</a>
              </div>

              {% endif %}
          </div>
       </div>

       {{ user.description | raw }}

       <hr>
       <h2>Ads of {{ user.fullName }}</h2>

       {% if user.ads | length > 0 %}
            <div class="row">
               {% for ad in user.ads %}
                     {% include 'ad/_ad.html.twig' %}
               {% endfor %}
            </div>
       {% else %}
            <div class="alert-warning">
               <p>
                 <strong>{{ user.fullName}}  dont have ads in web site !</strong>
               </p>
            </div>
       {% endif %}
    </div>
{% endblock %}
