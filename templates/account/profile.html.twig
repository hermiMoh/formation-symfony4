{% extends 'base.html.twig' %}

{% block title %}  Edit Profile User {% endblock %}

{% block body %}
   <div class="container">
       <h1 class="my-5">Edit Your Profile </h1>

       {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">General info</h2>
                    <hr>
                    {{ form_row(form.firstName)}}
                    {{ form_row(form.lastName)}}
                    {{ form_row(form.email)}}
                    {{ form_row(form.picture)}}
                </div>
            </div>
            <div class="col">
               <div class="alert alert-light">
                  <h2 class="alert-heading">Details</h2>
                  <hr>
                    {{ form_row(form.introduction)}}
                    {{ form_row(form.description)}}

                    <hr>
                    <p>if you finished your update, you can save </p>
                       <button type="submit" class="btn btn-primary">
                          <i class="fas fa-check"></i>
                          Confirm Edit Profile
                        </button>
               </div>
            </div>
        </div>

       {{ form_end(form) }}
   </div>


{% endblock %}